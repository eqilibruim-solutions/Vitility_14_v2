<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <!-- Purchase Order modifier -->
    <record id="view_purchase_order_info_form_inherit" model="ir.ui.view">
        <field name="name">Purchase Order info inherit</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']/tree/field[@name='date_planned']" position="after">
                <field name="supplier_info"/>
            </xpath>
        </field>
    </record>

    <!--Vendor information modifier-->
    <record id="view_product_supplier_info_form_inherit" model="ir.ui.view">
        <field name="name">view.product.supplier.info.form.inherit</field>
        <field name="model">product.supplierinfo</field>
        <field name="inherit_id" ref="product.product_supplierinfo_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet/group" position="after">
                <group>
                    <group string="Vendor Information">
                        <field name="vandor_product_information"/>
                    </group>
                </group>

            </xpath>
        </field>
    </record>
</odoo>